<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="top.kshon.pojo.Person" table="person">
        <id name="person_id" column="person_id" type="java.lang.Integer">
           <generator class="native"></generator>
        </id>
        <property name="name" column="name" type="string" />
        <property name="email" column="email" type="string" />
        <property name="phone" column="phone" type="string" />
        <property name="introduction" column="introduction" type="string" />
        <property name="picture" column="picture" type="string" />
        <property name="createtime" column="createtime" type="java.util.Date" />
        <one-to-one name="user" class="top.kshon.pojo.User"></one-to-one>
    </class>
</hibernate-mapping>
